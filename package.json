{
  "name": "data-cleaner",
  "version": "0.0.0-managed-by-semantic-release",
  "description": "Django-forms-inspired object data cleaner and validator for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "src/**",
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/IlyaSemenov/node-data-cleaner.git"
  },
  "keywords": [
    "validation"
  ],
  "author": "Ilya Semenov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IlyaSemenov/node-data-cleaner/issues"
  },
  "homepage": "https://github.com/IlyaSemenov/node-data-cleaner#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.6.0",
    "@commitlint/config-conventional": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^3.1.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "rollup": "^1.11.3",
    "rollup-plugin-cleaner": "^0.2.0",
    "rollup-plugin-typescript2": "^0.21.0",
    "semantic-release": "^15.9.17",
    "tap": "^13.1.3",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "test": "tap --jobs-auto --no-coverage 'test/**/*.test.js'",
    "build": "rollup -c",
    "prepublish": "npm run build",
    "lint": "eslint --fix '**/*.{js,ts}'"
  },
  "prettier": {
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "email-validator": "^2.0.4",
    "title-case": "^2.1.1"
  }
}
