{
  "name": "data-cleaner",
  "version": "0.0.0-managed-by-semantic-release",
  "description": "Django-forms-inspired object data cleaner and validator for Node.js",
  "main": "dist/bundle.umd.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "src/**",
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/IlyaSemenov/node-data-cleaner.git"
  },
  "keywords": [
    "validation"
  ],
  "author": "Ilya Semenov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IlyaSemenov/node-data-cleaner/issues"
  },
  "homepage": "https://github.com/IlyaSemenov/node-data-cleaner#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "eslint": "^5.11.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier-eslint-cli": "^4.7.1",
    "rollup": "^0.59.1",
    "rollup-plugin-cleaner": "^0.2.0",
    "rollup-plugin-typescript2": "^0.14.0",
    "semantic-release": "^15.9.17",
    "tap": "^12.1.1",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^21.0.2"
  },
  "scripts": {
    "test": "tap --jobs-auto 'test/**/*.test.js'",
    "build": "rollup -c",
    "prepublish": "npm run build",
    "lint": "eslint --fix '**/*.{js,ts}'"
  },
  "prettier": {
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "email-validator": "^2.0.4"
  }
}
